<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Money"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_pro_reguler"
            android:textSize="24sp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/dialog_input1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_below="@+id/dialog_txt1"
            android:fontFamily="@font/source_sans_pro_reguler"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:hint="Input"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHighlight="@color/colorPrimary"/>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:id="@+id/dialog_button_1"
            android:layout_below="@+id/dialog_input1"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="OK"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>