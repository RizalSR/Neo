<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:id="@+id/layout_profile_1"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/version"
            app:cardCornerRadius="90dp"
            android:elevation="0dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/profile_image"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/null_avatar"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_profile_2"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:gravity="center|top"
        android:layout_below="@+id/layout_profile_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:id="@+id/profile_card_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txt_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="left|center"
                android:text="Example name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_card_name"
            android:id="@+id/profile_card_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txt_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="left|center"
                android:text="example@email.com"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_card_email"
            android:id="@+id/profile_card_id_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txt_profile_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="left|center"
                android:text="091239178812"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_card_id_number"
            android:id="@+id/profile_card_country"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txt_profile_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="left|center"
                android:text="Indonesia"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_card_country"
            android:id="@+id/prodile_card_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txt_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="left|center"
                android:text="+628091027381"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/card_logout"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/logout"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</RelativeLayout>